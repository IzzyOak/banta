<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @chat_room.name %>
</h1>

<h3>Messages</h3>
<ul>
  <% @chat_room.messages.each do |msg|%>
  <li><strong><%= msg.user.name %></strong> - <%= msg.content %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_chat_room_path(@chat_room) %> |
<%= link_to 'Back', chat_rooms_path %>
